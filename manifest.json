{
	  "manifest_version": 3,
	    "name": "文字数カウンター",
	      "version": "1.0",
	        "description": "選択したテキストの文字数をカウントします。",
		  "permissions": ["activeTab"],
		    "action": {
			        "default_icon": "icon.png",
				    "default_popup": "popup.html"
				      },
				        "icons": {
						    "48": "icon.png"
						      },
						        "content_scripts": [
								    {
									          "matches": ["<all_urls>"],
										        "js": ["content.js"]
											    }
											      ]
}

